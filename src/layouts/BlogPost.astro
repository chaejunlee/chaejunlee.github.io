---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { getDates } from "../utils/dates";

export interface Props {
  content: {
    title: string;
    description: string;
    pubDate?: string;
    updatedDate?: string;
    heroImage?: string;
    tags: string[];
  };
}

const {
  content: { title, description, pubDate, updatedDate, heroImage, tags },
} = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      .title-header {
        margin-block: 3em;
      }
      .title {
        font-size: 2em;
        margin: 0;
      }
      .tag-list {
        display: flex;
        flex-wrap: wrap;
        margin-block: 1rem;
        padding: 0;
        list-style: none;
        gap: 0.25rem;
      }
      .tag {
        margin: 0;
        background-color: #eee;
        padding-inline: 1rem;
        padding-block: 0.25rem;
        border-radius: 100vh;
      }
      .tag a {
        text-decoration: none;
      }
      hr {
        border-top: 1px solid #ddd;
        margin: 1rem 0;
      }
      .hero {
        margin-block: 3em;
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <article style="position:relative;">
        <header class="title-header">
          <h1 class="title">{title}</h1>
          <div class="text-gray">
            {
              pubDate && (
                <div>
                  게시일 <time>{getDates(pubDate)}</time>
                </div>
              )
            }
            {
              updatedDate && (
                <div>
                  수정일 <time>{updatedDate}</time>
                </div>
              )
            }
          </div>
          {
            tags && (
              <ul class="tag-list">
                {tags.map((tag: string) => (
                  <li class="tag">
                    <a href={`/tags/${tag}`}>{tag}</a>
                  </li>
                ))}
              </ul>
            )
          }
        </header>
        {
          heroImage && (
            <img class="hero" width={720} height={360} src={heroImage} alt="" />
          )
        }
        <slot />
      </article>
    </main>
    <Footer />
  </body>
</html>
